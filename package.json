{
  "name": "db0",
  "version": "0.1.4",
  "description": "Lightweight SQL Connector",
  "repository": "unjs/db0",
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    "./connectors/libsql": {
      "import": "./connectors/libsql/node.mjs",
      "require": "./connectors/libsql/node.cjs",
      "web": {
        "import": "./connectors/libsql/node.mjs",
        "require": "./connectors/libsql/node.cjs"
      }
    },
    "./connectors/*": {
      "types": "./connectors/*.d.ts",
      "import": "./connectors/*.mjs",
      "require": "./connectors/*.cjs"
    },
    "./integrations/*": {
      "types": "./integrations/*.d.ts",
      "import": "./integrations/*.mjs",
      "require": "./integrations/*.cjs"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "connectors",
    "integrations"
  ],
  "scripts": {
    "build": "unbuild",
    "db0": "pnpm jiti src/cli",
    "dev": "vitest",
    "lint": "eslint --ext .ts . && prettier -c src test",
    "lint:fix": "eslint --ext .ts . --fix && prettier -w src test",
    "prepack": "pnpm build",
    "release": "pnpm test && changelogen --release --push && pnpm publish",
    "test:bun": "bun test ./test/connectors/bun-test.ts",
    "test": "pnpm lint && vitest run --coverage && pnpm test:bun"
  },
  "devDependencies": {
    "@libsql/client": "^0.10.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/bun": "^1.1.8",
    "@types/pg": "^8.11.6",
    "@vitest/coverage-v8": "^1.6.0",
    "automd": "^0.3.8",
    "better-sqlite3": "^9.6.0",
    "changelogen": "^0.5.5",
    "db0": "link:.",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.33.0",
    "eslint": "^8.57.0",
    "eslint-config-unjs": "^0.3.2",
    "jiti": "^1.21.6",
    "pg": "^8.12.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "unbuild": "^2.0.0",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "@libsql/client": "^0.10.0",
    "better-sqlite3": "^9.6.0",
    "drizzle-orm": "^0.33.0"
  },
  "peerDependenciesMeta": {
    "@libsql/client": {
      "optional": true
    },
    "better-sqlite3": {
      "optional": true
    },
    "drizzle-orm": {
      "optional": true
    }
  },
  "packageManager": "pnpm@8.15.9"
}